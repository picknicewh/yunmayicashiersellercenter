<?xml version="1.0" encoding="UTF-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="@color/head_red" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/space_x0.5" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/space_x1.5"
        android:top="@dimen/space"
        android:right="@dimen/space_x1.5"
        android:bottom="@dimen/space" />

</shape>