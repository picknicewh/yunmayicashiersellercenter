<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="save_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="black_medium">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="hit_medium">
        <item name="android:textColor">@color/hit_color</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="content_hline">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/black_light</item>
    </style>

    <style name="comment_choose_edit">
        <item name="android:textColorHint">#494949</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="comment_choose_right_edit">
        <item name="android:textColorHint">@color/red_btn</item>
        <item name="android:textColor">@color/goods_trade_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
    </style>

    <!--所有Activity动画-支持动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="comment_manager_textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/ts_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">0.5dp</item>
        <item name="android:layout_marginBottom">0.5dp</item>
        <item name="android:padding">@dimen/space_x2</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="common_conform_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space</item>
        <item name="android:textSize">@dimen/ts_large</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="rb_shop_order_status">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/rb_text_color</item>
        <item name="android:textSize">@dimen/ts_small</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/space_x1.5</item>
        <item name="android:paddingBottom">@dimen/space_x1.5</item>
        <item name="android:paddingLeft">@dimen/space</item>
        <item name="android:paddingRight">@dimen/space</item>
    </style>

    <style name="mProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">@dimen/space_x3</item>
        <item name="android:minHeight">@dimen/space</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progress_progressbar_bg</item>
    </style>
</resources>
