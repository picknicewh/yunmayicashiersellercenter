<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.ma.yi.app.module.shop.cash.AddOrderCashActivity">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/tv_shop_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="店铺金额：" />
    <com.yun.ma.yi.app.module.common.view.ItemEditText2
        android:id="@+id/et_order_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="提现金额："
        app:hitText="200元起提现"
        app:hitTextColor="@color/minor_text_color"
        app:mInputType="numberDecimal"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:padding="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="提现类型:"
            android:textColor="@color/goods_text_color"
            android:layout_gravity="center"
            android:textSize="@dimen/ts_large"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/gray_border_cor_bg"
            android:drawableRight="@mipmap/ic_rec_arrow_down"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_x0.5"
            android:text="批发账号"
            android:textColor="@color/goods_text_color" />
    </LinearLayout>
        <com.yun.ma.yi.app.module.common.view.ItemEditText2
            android:visibility="gone"
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="银行类型："
            app:hitText=" 如：中国建设银行，中国邮政"
            app:hitTextColor="@color/minor_text_color"
            />
    <com.yun.ma.yi.app.module.common.view.ItemEditText2
        android:id="@+id/et_accounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="开户名字："
        app:hitText="必填"
        app:mInputType="text"
        app:hitTextColor="@color/minor_text_color"/>
    <com.yun.ma.yi.app.module.common.view.ItemEditText2
        android:id="@+id/et_account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="开户账号："
        app:hitText="必填"
        app:mInputType="text"
        app:hitTextColor="@color/minor_text_color"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:orientation="horizontal"
        android:padding="@dimen/space_x2">
        <TextView
            android:visibility="gone"
            style="@style/common_conform_btn" />
        <TextView
            android:id="@+id/tv_conform"
            style="@style/common_conform_btn"
            android:background="@drawable/round_red_btn"
            android:text="@string/confirm" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/divine_line_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/space_x0.1"/>
            <TextView
                android:text="提现须知"
                android:textColor="@color/goods_text_color"
                android:textSize="@dimen/ts_x_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space"
                android:layout_marginRight="@dimen/space"/>
            <View
                android:layout_gravity="center"
                android:background="@color/divine_line_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_x0.1"/>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="@dimen/space_x2"
            android:text="@string/order_cash_notice"
            android:padding="@dimen/space_x2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
  </LinearLayout>
</ScrollView>
