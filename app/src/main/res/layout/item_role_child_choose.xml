<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/space_x2"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/space_x2"
            android:text="收银机"
            android:textSize="@dimen/ts_medium" />
        <ToggleButton
            android:id="@+id/tg_switch"
            android:layout_width="@dimen/space_x4"
            android:layout_height="@dimen/space_x2"
            android:layout_alignParentRight="true"
            android:background="@drawable/toggle_btn"
            android:checked="false"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>
</LinearLayout>