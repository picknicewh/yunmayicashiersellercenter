<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yun.ma.yi.app.module.shop.setting.ShopSettingLocationActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/space">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/space_x2.5"
            android:layout_height="@dimen/space_x2.5"
            android:src="@mipmap/ic_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置地图坐标"
            android:textColor="@color/goods_text_color"
            android:textSize="@dimen/ts_large" />

        <TextView
            android:id="@+id/tv_conform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/confirm"
            android:textColor="@color/goods_text_color" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"
        android:layout_below="@+id/rl_top"
        android:background="@color/divine_line_color" />

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line" />

    <TextView
        android:id="@+id/tv_reset"
        android:layout_width="@dimen/space_x4"
        android:layout_height="@dimen/space_x4"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_top"
        android:layout_margin="@dimen/space_x0.8"
        android:background="@drawable/rect_half_white"
        android:gravity="center"
        android:text="重置"
        android:textSize="@dimen/ts_small" />
</RelativeLayout>
