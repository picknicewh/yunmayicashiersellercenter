<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/inventory_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:layout_marginLeft="@dimen/space_x0.1"
        android:paddingBottom="@dimen/space_x2"
        android:paddingTop="@dimen/space_x2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/inventory_warning"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/inventory_warning"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:layout_marginLeft="@dimen/space_x0.1"
        android:paddingBottom="@dimen/space_x2"
        android:paddingTop="@dimen/space_x2"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notice"/>

    </LinearLayout>

</LinearLayout>