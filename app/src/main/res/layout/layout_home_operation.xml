<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:layout_marginRight="@dimen/space_x0.5"
            android:layout_weight="1"
            android:src="@mipmap/goods" />


        <ImageView
            android:id="@+id/stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x0.5"
            android:layout_weight="1"
            android:src="@mipmap/stock" />

        <ImageView
            android:id="@+id/employee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/space_x0.5"
            android:src="@mipmap/employee" />

        <ImageView
            android:id="@+id/member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/member"
            android:layout_marginRight="@dimen/space_x0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/marketing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_x0.5"
            android:layout_marginRight="@dimen/space_x0.5"
            android:layout_weight="1"
            android:src="@mipmap/marketing" />

        <ImageView
            android:id="@+id/report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x0.5"
            android:layout_weight="1"
            android:src="@mipmap/report" />

        <ImageView
            android:id="@+id/mayi_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/antshop" />

        <ImageView
            android:id="@+id/logistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_x0.5"
            android:layout_weight="1"
            android:src="@mipmap/logistics"
            android:tag="2"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/micro_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:src="@mipmap/micro_shop" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:src="@mipmap/comment" />


        <ImageView
            android:id="@+id/account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space"
            android:layout_weight="1"
            android:src="@mipmap/account"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>