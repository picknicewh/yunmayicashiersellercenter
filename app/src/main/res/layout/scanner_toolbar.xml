<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    android:paddingTop="@dimen/space"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/black_text">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/scanner_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/space_x2"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"/>
        <TextView
            android:id="@+id/scanner_toolbar_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="二维码/条码"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_large"/>

    </LinearLayout>


</android.support.v7.widget.Toolbar>
