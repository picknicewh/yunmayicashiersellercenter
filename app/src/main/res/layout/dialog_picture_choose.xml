<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/round__white_bg"
    android:layout_height="match_parent">
        <TextView
            android:background="@color/pic_dialog_color"
            android:gravity="center"
            android:text="选择图片来源"
            android:padding="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_album"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="@color/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"/>
        <View
            android:background="@color/divine_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x0.1"/>
        <TextView
            android:id="@+id/tv_take_picture"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"/>
        <View
            android:background="@color/divine_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x0.1"/>
        <TextView
            android:id="@+id/tv_cance1"
            android:layout_margin="@dimen/space_x2"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/round_red_btn"
            android:padding="@dimen/space"
            android:text="取消"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>