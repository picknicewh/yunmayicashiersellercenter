<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/sale_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="销售时间："
        app:mHint="0"/>

    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/sale_singular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="销售单数："
        app:mHint="0"
      />


    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/sale_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="销售金额(元):"
        app:mHint="￥0.00"/>


    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/refund_singular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="退货单数:"
        app:mHint="0"/>


    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/refund_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="退货金额(元):"
        app:mHint="￥0.00"/>


    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/sale_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="销售成本(元):"
        app:mHint="￥0.00"/>

    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/sale_maori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="销售毛利(元):"
        app:mHint="￥0.00"/>

    <com.yun.ma.yi.app.module.common.view.ItemTextView
        android:id="@+id/maori_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mLabel="毛利率(%):"
        app:mHint="0%"/>
</LinearLayout>