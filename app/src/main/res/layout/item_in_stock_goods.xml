<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/home_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:padding="@dimen/space_x2"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
        android:text="1"
        android:id="@+id/tv_no"
        android:textColor="@color/main_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space"/>
        <TextView
            android:text="康师傅茉莉花茶1L*12瓶12瓶12瓶"
            android:id="@+id/tv_name"
            android:textColor="@color/main_text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:textSize="@dimen/ts_small"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_minus"
                android:layout_marginLeft="@dimen/space"
                android:layout_gravity="center"
                android:src="@mipmap/ic_circle_minus"
                android:layout_width="@dimen/space_x2"
                android:layout_height="@dimen/space_x2" />
            <TextView
                android:id="@+id/tv_adjust_count"
                android:layout_gravity="center"
                android:text="0"

                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_small"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space"
                android:paddingRight="@dimen/space"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_gravity="center"
                android:src="@mipmap/ic_circle_add"
                android:layout_width="@dimen/space_x2"
                android:layout_height="@dimen/space_x2" />
            <TextView
                android:id="@+id/tv_check"
                android:background="@drawable/round_red_btn"
                android:textColor="@color/white"
                android:text="@string/confirm"
                android:textSize="@dimen/ts_small"
                android:layout_width="@dimen/space_x5"
                android:layout_height="@dimen/space_x2.5"
                android:layout_marginLeft="@dimen/space_x2"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
