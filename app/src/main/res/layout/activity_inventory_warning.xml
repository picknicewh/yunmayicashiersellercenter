<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:text="@string/warning_info"
        android:gravity="center_vertical"
        android:textSize="@dimen/ts_small"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:textColor="@color/black_text_s"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"
        android:background="@color/no_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginTop="15dp"
        android:background="@color/red_btn">
        <View
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"
            android:background="@color/no_shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/space_x0.5"
            android:paddingBottom="@dimen/space_x0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="@color/white"
            android:text="@string/goods_name">
        </TextView>
        <View
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"
            android:background="@color/no_shape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/ts_small"
                android:text="@string/warning_number"
                android:textColor="@color/white"/>
            <View
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"
                android:background="@color/no_shape"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/ts_small"
                android:text="@string/stock_number"
                android:textColor="@color/white"/>
            <View
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"
                android:background="@color/no_shape"/>
        </LinearLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
        android:id="@+id/stock_inventory_warning_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"/>

</LinearLayout>