<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_marginBottom="@dimen/space_x0.1"
        android:paddingLeft="@dimen/space_x2"
        android:paddingBottom="@dimen/space"
        android:paddingTop="@dimen/space"
        android:paddingRight="@dimen/space_x2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单信息:"
                android:textColor="@color/goods_text_color"
                android:layout_marginRight="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:text="韩磊磊/13735484622"

                android:layout_marginRight="@dimen/space"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_status"
                android:text="待处理"
                android:textColor="@color/goods_trade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单编号:"
                android:textColor="@color/goods_text_color"
                android:layout_marginRight="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_order_id"
                android:text="201711181456242642"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_arrow"
                android:src="@mipmap/ic_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单金额:"
                android:textColor="@color/goods_text_color"
                android:layout_marginRight="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_cost"
                android:text="124.5元"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:text="2017-07-23 13:09:12"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>