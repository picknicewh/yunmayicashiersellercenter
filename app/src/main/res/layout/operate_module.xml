<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space"
    android:paddingRight="@dimen/space"
    android:layout_marginTop="-20dp"
    android:shrinkColumns="0,2,4,6"
    android:stretchColumns="0,2,4,6" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/member"
            android:tag="2" />

        <View
            android:layout_width="@dimen/space_x0.5"
            android:layout_height="@dimen/space_x0.1"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/marketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/marketing"
            android:tag="3" />

        <View
            android:layout_width="@dimen/space_x0.5"
            android:layout_height="@dimen/space_x0.1"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/report"
            android:tag="4" />

        <View
            android:layout_width="@dimen/space_x0.5"
            android:layout_height="@dimen/space_x0.1"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/mayi_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/antshop"
            android:tag="6" />

    </TableRow>

    <TableRow
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/micro_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/micro_shop"
            android:tag="5" />

        <View
            android:layout_width="@dimen/space_x0.5"
            android:layout_height="@dimen/space_x0.1"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/comment"
            android:tag="6" />
        <View
            android:layout_width="@dimen/space_x0.5"
            android:layout_height="@dimen/space_x0.1"
            android:background="@android:color/transparent" />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/account"
            android:tag="1" />


    </TableRow>

</TableLayout>