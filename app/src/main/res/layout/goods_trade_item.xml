<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/serial_number"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/space_x2"
        android:paddingLeft="@dimen/space_x2"
        android:layout_height="@dimen/item_height"
        android:layout_weight="1"
        android:textSize="@dimen/ts_medium"
        android:gravity="center_vertical"
        android:textColor="@color/black_text"
        android:drawableRight="@mipmap/user_info_arrow_right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:orientation="horizontal"
        android:paddingRight="@dimen/space_x2"
        android:paddingLeft="@dimen/space_x2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_medium"
                android:textColor="@color/goods_trade_text"
                android:text="@string/goods_trade_money"/>

            <TextView
                android:id="@+id/paid_in_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_medium"
                android:layout_marginLeft="5dp"
                android:textColor="@color/goods_trade_text"/>

        </LinearLayout>

        <TextView
            android:id="@+id/goods_trade_create_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/ts_medium"
            android:textColor="@color/goods_trade_text"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_number"
        android:paddingLeft="@dimen/space_x2"
        android:text="工号："
        android:textSize="@dimen/ts_medium"
        android:textColor="@color/goods_trade_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/home_title"/>
    
</LinearLayout>