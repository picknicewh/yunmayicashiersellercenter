<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.ma.yi.app.module.member.search.MemberSearchActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/goods_list_top_bg">
        <com.yun.ma.yi.app.module.common.ClearEditText
            android:id="@+id/et_search"
            android:hint="会员卡号/手机号"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:maxLines="1"
            android:padding="@dimen/space_x0.5"
            android:textSize="@dimen/ts_medium"
            android:textColorHint="@color/minor_text_color"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space"
            android:layout_marginRight="@dimen/space"
            android:maxLength="23"
            android:inputType="number"
            android:gravity="center"/>
        <TextView
            android:text="@string/seach"
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_small"
            android:paddingLeft="@dimen/space_x1.5"
            android:paddingRight="@dimen/space_x1.5"
            android:paddingTop="@dimen/space_x0.5"
            android:paddingBottom="@dimen/space_x0.5"
            android:background="@drawable/round_red_btn"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/space_x1.5"
        android:text="@string/member_info_statistic"
        android:textColor="@color/main_text_color" />

    <LinearLayout
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:background="@drawable/rect_border_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="会员总数"
                android:textColor="@color/main_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="@dimen/space"
                android:textSize="@dimen/ts_small"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/divine_line_color"
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="发卡总数"
                android:textColor="@color/main_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/space"
                android:textSize="@dimen/ts_small"/>
          <View
            android:background="@color/divine_line_color"
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="会员余额"
                android:textColor="@color/main_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ts_small"
                android:padding="@dimen/space"/>
          <View
            android:background="@color/divine_line_color"
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:text="会员积分"
                android:textColor="@color/main_text_color"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ts_small"
                android:padding="@dimen/space"/>
        </LinearLayout>
        <View
            android:background="@color/divine_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x0.1"/>
    <LinearLayout
        android:id="@+id/ll_member_info"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_member_count"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/space"
            android:textSize="@dimen/ts_small"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/divine_line_color"
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_card_count"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_small"
            android:padding="@dimen/space"
            />
        <View
            android:background="@color/divine_line_color"
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_member_balance"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/ts_small"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"/>
        <View
            android:background="@color/divine_line_color"
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_member_integral"
            android:textSize="@dimen/ts_small"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/space"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
