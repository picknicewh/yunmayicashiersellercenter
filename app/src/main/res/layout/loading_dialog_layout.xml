<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null" >

    <LinearLayout
        android:padding="@dimen/space_x0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/space_x8"
        android:minHeight="@dimen/space_x8"
        android:layout_centerInParent="true"
        android:background="@drawable/round_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/loading_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_loading" />
        </RelativeLayout>
		<TextView
            android:id="@+id/loading_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_x0.3"
            android:layout_marginBottom="@dimen/space_x0.3"
            android:text="0%"
            android:textColor="@color/black_text"
            android:textSize="@dimen/ts_medium"
            android:visibility="gone" />
        <TextView
            android:id="@+id/loading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/space"
            android:text="@string/dialog_waiting"
            android:textColor="@color/black_text"
            android:textSize="@dimen/ts_medium" />
    </LinearLayout>

</RelativeLayout>