<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.ma.yi.app.module.member.search.MemberInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yun.ma.yi.app.module.common.view.ItemEditText2
            android:id="@+id/tv_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hitText="@string/NECESSARY"
            app:label="会员名字"
            app:mInputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:id="@+id/tv_discount_way_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="性别"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="生日"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手机号"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />
        </LinearLayout>
        <com.yun.ma.yi.app.module.common.view.ItemEditText2
            android:id="@+id/tv_idard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hitText="@string/NECESSARY"
            app:label="身份证"
            app:mInputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="卡类型"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />
        </LinearLayout>

        <com.yun.ma.yi.app.module.common.view.ItemEditText2
            android:id="@+id/tv_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:hitText="@string/necessary"
            app:label="卡号"
            app:mInputType="number" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="优惠方式"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_discount_way"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_discount_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_x0.1"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="折扣率（%）"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/ts_large" />

            <TextView
                android:id="@+id/tv_discount_rate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/space_x0.5"
                android:gravity="center|right"
                android:hint="@string/NECESSARY"
                android:textColor="@color/goods_trade_text"
                android:textColorHint="@color/red_btn" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/space_x3">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/common_conform_btn"
                android:layout_weight="0.5"
                android:layout_marginRight="@dimen/space_x2"
                android:background="@drawable/round_orange_btn"
                android:text="@string/cancel" />

            <TextView
                android:id="@+id/tv_conform"
                style="@style/common_conform_btn"
                android:background="@drawable/round_red_btn"
                android:text="@string/confirm" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
