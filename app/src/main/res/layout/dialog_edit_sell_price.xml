<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/round_grey_bg"
        android:orientation="vertical"
        android:layout_margin="@dimen/space_x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_grey_red"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="确认修改商品价格"
            android:textSize="@dimen/ts_large"
            android:textColor="@color/white" />
        <LinearLayout
            android:padding="@dimen/space"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="原本成本价："
                android:textColor="@color/main_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_price"
                android:text="￥5.6"
                android:textColor="@color/red_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="@dimen/space"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:text="匹配后成本价："
                android:textColor="@color/main_text_color"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_conform_price"
                android:text="￥5.6"
                android:textColor="@color/red_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
         <EditText
             android:id="@+id/et_edit_price"
             android:layout_margin="@dimen/space"
             android:background="@drawable/gray_border_bg"
             android:hint="请输入你要修改的售价"
             android:padding="@dimen/space"
             android:gravity="center"
             android:textSize="@dimen/ts_medium"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_x0.1"
            android:background="@color/divine_line_color" />
        <LinearLayout
            android:layout_marginTop="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:background="@color/transparent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space"
                android:layout_height="wrap_content"
                android:textColor="@color/red_btn"
                android:text="取消" />
            <View
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"
                android:background="@color/divine_line_color" />
            <TextView
                android:background="@color/transparent"
                android:id="@+id/tv_conform"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/space"
                android:layout_height="wrap_content"
                android:textColor="@color/red_btn"
                android:text="确认" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>