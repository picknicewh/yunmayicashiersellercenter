<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <com.yun.ma.yi.app.module.common.view.ItemMidEditText
        android:id="@+id/tv_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hitText="@string/NECESSARY"
        app:hitTextColor="@color/minor_text_color"
        app:label="店铺名称："
        app:mInputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/space_x2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品公告："
            android:textSize="@dimen/ts_large" />

        <EditText
            android:id="@+id/et_shop_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gray_border_bg"
            android:gravity="left"
            android:hint="@string/NECESSARY"
            android:lines="4"
            android:padding="@dimen/space_x0.5"
            android:textColorHint="@color/minor_text_color"
            android:textSize="@dimen/ts_medium" />
    </LinearLayout>

    <com.yun.ma.yi.app.module.common.view.ItemMidEditText
        android:id="@+id/tv_distribution_scope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hitText="默认500米"
        app:hitTextColor="@color/minor_text_color"
        app:label="配送范围(米)："
        app:mInputType="number" />
    <com.yun.ma.yi.app.module.common.view.ItemMidEditText
        android:id="@+id/tv_delivery_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hitText="默认为0"
        app:hitTextColor="@color/minor_text_color"
        app:label="起送金额(元)："
        app:mInputType="numberDecimal" />

       <com.yun.ma.yi.app.module.common.view.ItemMidEditText
           android:id="@+id/tv_distribution_amount"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:hitText="默认为0"
           app:hitTextColor="@color/minor_text_color"
           app:label="配送金额(元)："
           app:mInputType="numberDecimal" />

       <LinearLayout
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:padding="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:text="白天营业："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_large" />
        <TextView
            android:id="@+id/tv_day_open_time"
            android:text="06:00"
            android:drawableRight="@mipmap/ic_rec_arrow_down"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_x0.5"
            android:textColor="@color/goods_text_color"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_cor_bg"/>
        <TextView
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space"
            android:layout_gravity="center"
            android:text="至"
            android:textColor="@color/goods_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_large" />
        <TextView
            android:id="@+id/tv_day_close_time"
            android:text="06:00"
            android:textColor="@color/goods_text_color"
            android:drawableRight="@mipmap/ic_rec_arrow_down"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_x0.5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_cor_bg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/space_x0.1"
        android:background="@color/white"
        android:padding="@dimen/space_x2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:text="凌晨营业："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_large" />
        <TextView
            android:id="@+id/tv_night_open_time"
            android:text="06:00"
            android:drawableRight="@mipmap/ic_rec_arrow_down"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_x0.5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_cor_bg"/>
        <TextView
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space"
            android:layout_gravity="center"
            android:text="至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ts_large" />
        <TextView
            android:id="@+id/tv_night_close_time"
            android:text="06:00"
            android:drawableRight="@mipmap/ic_rec_arrow_down"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_x0.5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_border_cor_bg"/>
    </LinearLayout>
    <com.yun.ma.yi.app.module.common.view.ItemMidEditText
        android:id="@+id/tv_shop_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hitText="@string/NECESSARY"
        app:hitTextColor="@color/minor_text_color"
        app:label="小店店主："
        app:mInputType="text" />
    <com.yun.ma.yi.app.module.common.view.ItemMidEditText
        android:id="@+id/tv_shop_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hitText="@string/NECESSARY"
        app:hitTextColor="@color/minor_text_color"
        app:label="联系方式："
        app:mInputType="number" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/space_x0.1"
           android:background="@color/white"
           android:orientation="horizontal"
           android:padding="@dimen/space_x2">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="小店地址："
               android:textSize="@dimen/ts_large" />

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/tv_province"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="@dimen/space_x0.5"
                       android:layout_weight="1"
                       android:background="@drawable/gray_border_cor_bg"
                       android:drawableRight="@mipmap/ic_rec_arrow_down"
                       android:gravity="center_vertical"
                       android:paddingLeft="@dimen/space_x0.5"

                       android:textColor="@color/goods_text_color" />

                   <TextView
                       android:id="@+id/tv_city"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginRight="@dimen/space_x0.5"
                       android:layout_weight="1"
                       android:background="@drawable/gray_border_cor_bg"
                       android:drawableRight="@mipmap/ic_rec_arrow_down"
                       android:gravity="center_vertical"
                       android:paddingLeft="@dimen/space_x0.5"

                       android:textColor="@color/goods_text_color" />

                   <TextView
                       android:id="@+id/tv_area"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:background="@drawable/gray_border_cor_bg"
                       android:drawableRight="@mipmap/ic_rec_arrow_down"
                       android:gravity="center_vertical"
                       android:paddingLeft="@dimen/space_x0.5"

                       android:textColor="@color/goods_text_color" />
               </LinearLayout>

               <EditText
                   android:id="@+id/et_address"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:hint="详细地址"
                   android:paddingBottom="@dimen/space"
                   android:paddingTop="@dimen/space"
                   android:textSize="@dimen/ts_small" />

               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/space_x0.1"
                   android:background="@color/home_title" />

               <TextView
                   android:id="@+id/tv_location"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@mipmap/ic_localtion"
                   android:gravity="center"
                   android:paddingBottom="@dimen/space"
                   android:paddingTop="@dimen/space"
                   android:text="点我设置坐标，可以更加精准哦！"
                   android:textColor="@color/goods_trade_text"
                   android:textSize="@dimen/ts_small" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/space_x0.1"
                   android:background="@color/home_title" />
           </LinearLayout>

       </LinearLayout>

       <RelativeLayout
           android:padding="@dimen/space_x2"
           android:layout_marginBottom="@dimen/space_x0.1"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_gravity="center"
               android:text="是否营业："
               android:textSize="@dimen/ts_large" />
           <ToggleButton
               android:id="@+id/tg_switch"
               android:layout_width="@dimen/space_x5"
               android:layout_height="@dimen/space_x2.5"
               android:layout_alignParentRight="true"
               android:background="@drawable/toggle_btn"
               android:checked="true"
               android:textOff=""
               android:textOn="" />
       </RelativeLayout>
       <RelativeLayout
           android:padding="@dimen/space_x2"
           android:layout_marginBottom="@dimen/space_x0.1"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="货到付款："
               android:textSize="@dimen/ts_large"
               android:layout_alignParentBottom="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" />
           <ToggleButton
               android:id="@+id/tg_array_pay"
               android:layout_width="@dimen/space_x5"
               android:layout_height="@dimen/space_x2.5"
               android:layout_alignParentRight="true"
               android:background="@drawable/toggle_btn"
               android:checked="true"
               android:textOff=""
               android:textOn="" />
       </RelativeLayout>
       <RelativeLayout
           android:padding="@dimen/space_x2"
           android:layout_marginBottom="@dimen/space_x0.1"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_gravity="center"
               android:text="线上支付："
               android:textSize="@dimen/ts_large" />
           <ToggleButton
               android:id="@+id/tg_online_pay"
               android:layout_width="@dimen/space_x5"
               android:layout_height="@dimen/space_x2.5"
               android:layout_alignParentRight="true"
               android:background="@drawable/toggle_btn"
               android:checked="false"
               android:textOff=""
               android:textOn="" />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginBottom="@dimen/space_x0.1"
           android:orientation="horizontal"
           android:padding="@dimen/space_x2">
           <TextView
               android:id="@+id/tv_save"
               style="@style/common_conform_btn"
               android:background="@drawable/round_red_btn"
               android:text="保  存" />
       </LinearLayout>
   </LinearLayout>
</ScrollView>
