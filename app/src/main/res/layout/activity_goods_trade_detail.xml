<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/single_code"
            android:gravity="center_vertical"
            android:textSize="@dimen/ts_small"
            android:textColor="@color/black_text"/>

        <TextView
            android:id="@+id/single_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/ts_small"
            android:textColor="@color/black_text"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"
        android:background="@color/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/create_time"
            android:gravity="center_vertical"
            android:textSize="@dimen/ts_small"
            android:textColor="@color/black_text"/>

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/ts_small"
            android:textColor="@color/black_text"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"
        android:background="@color/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/amount_money"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/amount_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/goods_trade_money"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/goods_trade_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/red_btn"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:paddingLeft="@dimen/space_x2"
        android:paddingRight="@dimen/space_x2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/pay_info"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/pay_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/mamager"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

            <TextView
                android:id="@+id/mamager"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/ts_small"
                android:textColor="@color/black_text"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_x0.1"
        android:background="@color/home_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:background="@color/red_btn">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/no_shape"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/space_x0.5"
            android:paddingBottom="@dimen/space_x0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:textColor="@color/white"
            android:text="@string/goods_name">
        </TextView>

        <View
            android:layout_width="@dimen/space_x0.1"
            android:layout_height="match_parent"
            android:background="@color/no_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/goods_sum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textSize="@dimen/ts_small"
                android:text="数量/重量"
                android:textColor="@color/white"/>
            <View
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"
                android:background="@color/no_shape"/>
            <TextView
                android:id="@+id/goods_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/ts_small"
                android:text="@string/money"
                android:textColor="@color/white"/>
            <View
                android:layout_width="@dimen/space_x0.1"
                android:layout_height="match_parent"
                android:background="@color/no_shape"/>
        </LinearLayout>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.extras.recyclerview.PullToRefreshRecyclerView
        android:id="@+id/goods_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"/>

</LinearLayout>